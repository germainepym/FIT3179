{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "https://raw.githubusercontent.com/germainepym/FIT3179/main/Assignment2%20Dataset/top10Scores.csv"
  },
  "width": 500,
  "height": 250,
  "resolve": {"scale": {"color": "independent"}},
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "aggregate": "sum",
          "field": "Score",
          "type": "quantitative",
          "stack": "zero"
        },
        "y": {"field": "university_name", "type": "nominal"},
        "color": {"field": "Category", "type": "nominal"}
      }
    },
    {
      "mark": {"type": "text", "dx": -15, "dy": 3},
      "encoding": {
        "x": {
          "aggregate": "sum",
          "field": "Score",
          "type": "quantitative",
          "stack": "zero"
        },
        "y": {"field": "university_name", "type": "nominal"},
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {"range": ["white"]},
          "legend": null
        },
        "text": {
          "aggregate": "sum",
          "field": "Score",
          "type": "quantitative",
          "format": ".1f"
        }
      }
    }
  ],
  "config": {}
}